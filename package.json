{
  "name": "unleash-mcp-server",
  "version": "1.0.0",
  "description": "MCP server implementation for Unleash feature flags integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-dbs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:cli": "cross-env node dist/index.js --stdio",
    "start:http": "node dist/index.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:cli": "cross-env NODE_ENV=development tsx watch src/index.ts --stdio",
    "lint": "eslint src/**/*.ts typescript-starters/**/*.ts",
    "test": "jest"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuongtl1992/unleash-mcp.git"
  },
  "keywords": [
    "unleash",
    "feature-flags",
    "mcp",
    "llm",
    "ai"
  ],
  "author": "cuongtl1992",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "unleash-client": "^6.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
